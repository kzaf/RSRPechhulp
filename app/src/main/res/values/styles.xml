<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="TextAppearancePopupTitle">
        <item name="android:textSize">@dimen/text_size_popup_title</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="TextAppearancePopup">
        <item name="android:textSize">@dimen/text_size_popup</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="ButtonDefault">
        <item name="android:textSize">@dimen/button_default_text_size_btn</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/main_btn_bg</item>
        <item name="android:paddingLeft">@dimen/button_default_padding_left_horizontal_btn</item>
        <item name="android:paddingRight">@dimen/button_default_padding_right_horizontal_btn</item>
        <item name="android:minHeight">@dimen/button_default_height_btn_min</item>
        <item name="android:drawablePadding">@dimen/button_default_drawable_padding</item>
        <item name="android:textAllCaps">@bool/text_all_caps</item>
        <item name="android:layout_marginStart">@dimen/button_default_margin</item>
        <item name="android:layout_marginLeft">@dimen/button_default_margin</item>
        <item name="android:layout_marginEnd">@dimen/button_default_margin</item>
        <item name="android:layout_marginRight">@dimen/button_default_margin</item>
        <item name="android:layout_marginBottom">@dimen/button_default_margin_bottom</item>
    </style>

    <style name="ButtonToolbar" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/map_toolbar_back_button_click_effect</item>
        <item name="android:drawableStart">@drawable/menu_arrow</item>
        <item name="android:drawableLeft">@drawable/menu_arrow</item>
        <item name="android:drawablePadding">@dimen/button_toolbar_drawable_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/button_toolbar_padding</item>
        <item name="android:paddingStart">@dimen/button_toolbar_padding_start</item>
        <item name="android:text">@string/maps_activity_title</item>
        <item name="android:textAllCaps">@bool/text_all_caps</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

</resources>
