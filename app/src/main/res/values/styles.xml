<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="TextAppearancePopupTitle">
        <item name="android:textSize">@dimen/textsize_popup_title</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="TextAppearancePopup">
        <item name="android:textSize">@dimen/textsize_popup</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="ButtonDefault">
        <item name="android:textSize">@dimen/textsize_btn</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/main_btn_bg</item>
        <item name="android:paddingLeft">@dimen/padding_left_horizontal_btn</item>
        <item name="android:paddingRight">@dimen/padding_right_horizontal_btn</item>
        <item name="android:minHeight">@dimen/height_btn_min</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:textAllCaps">@bool/text_all_caps</item>
        <item name="android:layout_marginStart">@dimen/button_margin</item>
        <item name="android:layout_marginLeft">@dimen/button_margin</item>
        <item name="android:layout_marginEnd">@dimen/button_margin</item>
        <item name="android:layout_marginRight">@dimen/button_margin</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_bottom</item>
    </style>

</resources>
